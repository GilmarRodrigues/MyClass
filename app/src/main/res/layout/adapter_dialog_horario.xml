<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_popupmenu"
            android:layout_toStartOf="@+id/iv_popupmenu">

            <TextView
                android:id="@+id/tv_dia"
                style="@style/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingLeft="13dp"
                android:paddingTop="5dp"
                android:maxLength="200"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/desricao" />

            <TextView
                android:id="@+id/tv_hora"
                style="@style/subtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dia"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="5dp"
                android:paddingLeft="13dp"
                android:paddingTop="5dp"
                android:maxLength="200"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/desricao" />

        </RelativeLayout>

        <com.rey.material.widget.CheckBox
            android:id="@+id/cb_turma_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:checked="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            style="@style/LightCheckBoxDrawable"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_divisor"
        android:background="@color/divider" />
</LinearLayout>